        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
    <div class="col-md-6">
        <h4>Inventory</h4>
        <hr/>
        @if (Model.Inventories.Count==0)
        {
            <h5>No inventories registred yet</h5>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>
                      WareHouse
                    </th>
                    <th>
                        Stock
                    </th>
                </tr>

                @foreach (var item in Model.Inventories.ToList())
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Warehouse.Name)
                        </td>
                        <td align="right">
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                    </tr>
                }
                <tr>
                    <td>
                      <strong>Total</strong> 
                    </td>
                    <td align="right">
                       <strong>@Html.DisplayFor(model => model.Stock)</strong> 
                    </td>
                </tr>
            </table>

        }
    </div>
